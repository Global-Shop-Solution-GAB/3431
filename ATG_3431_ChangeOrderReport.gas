F.Intrinsic.string.Concat("Select Notes from ATG_CHG_ORDER_NOTES where OrderNo='",V.Global.sOrder,"' and Line='",V.Global.sLine,"'",V.Local.sSQL)
F.ODBC.Connection!con.OpenRecordsetRW("rst",V.Local.sSQL)
