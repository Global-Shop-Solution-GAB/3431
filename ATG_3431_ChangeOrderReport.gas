F.Intrinsic.String.Concat("S/O #: ",V.Passed.000060,V.Global.sOrder)
F.Intrinsic.String.Concat("Line #: ",V.Passed.000051,V.Global.sLine)

F.Intrinsic.Printer.PrintRet("")
F.Intrinsic.Printer.PrintRet("")
